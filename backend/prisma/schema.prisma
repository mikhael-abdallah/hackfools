generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["debian-openssl-1.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Government {
  id      String @id @default(uuid())
  country String @db.VarChar(200)
  icon    String @db.VarChar(10000)
  posts   Post[]
}

model User {
  id   String @id @default(uuid())
  name String @db.VarChar(200)
}

model Post {
  id           String     @id @default(uuid())
  content      String     @db.VarChar(1000)
  governmentId String
  government   Government @relation(fields: [governmentId], references: [id])
}

/// This model or at least one of its fields has comments in the database, and requires an additional setup for migrations: Read more: https://pris.ly/d/database-comments
model pais {
  id      BigInt  @id @default(autoincrement())
  nome    String? @db.VarChar(60)
  nome_pt String? @db.VarChar(60)
  sigla   String? @db.VarChar(2)
  bacen   Int?
}
